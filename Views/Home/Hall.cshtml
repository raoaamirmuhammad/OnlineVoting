@model OnlineVoting.Models.admin
@{
    ViewBag.Title = "Hall";
    
}

<h2>Hall</h2>
<div class="row">
    <div class="col-md-4" >
        <h2>Created Panels</h2>
        <div style="border:solid 2px">
            <form action="createPanel" method="post">
                <div class=" form-group">

                    <label class="col-md-4 control-label">Panel Name</label>
                    <div class="col-md-12">
                        
                        @Html.TextBoxFor(m => m.Panel_Id, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" style="margin-left:18px" class="btn btn-default">Create New Panel</button>

                </div>
            </form>

            
        </div>
        <p class="col-md-10">
            <br/>
            <br/>
            <b>Created Panels</b>
            <ul class="col-md-10">
                @foreach (var i in (List<String>)ViewBag.createdpanels)
                {
                    <li>
                        @Html.ActionLink(i, "CreatedPanels", "Home", new { panel=i },null)

                    </li>
                }
            </ul>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Registered Panels</h2>
        <p class="col-md-10">
            
            <ul class="col-md-10">
                @foreach (var i in (List<String>)ViewBag.registeredpanels)
                {
                <li>
                    @Html.ActionLink(i, "RegisteredPanels", "Home", new { panel=i },null)

                </li>
                }
            </ul>
        </p>
    </div>
    <div class="col-md-4">
        <h2>All Panels</h2>
            <ul class="col-md-10">
                @foreach (var i in (List<String>)ViewBag.allpanels)
                {
                <li>
                    @Html.ActionLink(i, "AllPanels", "Home", new { panel=i },null)
                </li>
                }
            </ul>
                    
    </div>
</div>
